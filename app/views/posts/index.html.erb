<% if @posts.any? %>
  <% @posts.each do |post|  %>
    <h2><%= post.caption %></h2>
    <%= image_tag post.image.url(:thumb) %>
    <%= link_to "Delete Post", post_path(post), method: :delete %>
    <%= link_to "Edit Caption", edit_post_path(post) %>
  <% end %>
<% else %>
  No posts have been added
<% end %>

<%= link_to 'Add a post', new_post_path %>
